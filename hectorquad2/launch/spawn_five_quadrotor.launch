<launch>
    <group ns="drone1">
        <arg name="drone_name" value="drone1" />
        <include file="$(find hector_quadrotor_gazebo)/launch/spawn_quadrotor.launch">
            <arg name="name" value="$(arg drone_name)" />
            <arg name="tf_prefix" value="$(arg drone_name)" />
            
            <arg name="x" value="-10.0" />
            <arg name="y" value="-10.0" />
        </include>
        <node name="$(arg drone_name)" pkg="hectorquad2" type="quadrotor_controller.py" output="screen" args="$(arg drone_name)" />
    </group>

    <group ns="drone2">
        <arg name="drone_name" value="drone2" />
        <include file="$(find hector_quadrotor_gazebo)/launch/spawn_quadrotor.launch">
            <arg name="name" value="$(arg drone_name)" />
            <arg name="tf_prefix" value="$(arg drone_name)" />
            
            <arg name="x" value="+10.0" />
            <arg name="y" value="-10.0" />
        </include>
        <node name="$(arg drone_name)" pkg="hectorquad2" type="quadrotor_controller.py" output="screen" args="$(arg drone_name) drone1 drone3" />
    </group>

    <group ns="drone3">
        <arg name="drone_name" value="drone3" />
        <include file="$(find hector_quadrotor_gazebo)/launch/spawn_quadrotor.launch">
            <arg name="name" value="$(arg drone_name)" />
            <arg name="tf_prefix" value="$(arg drone_name)" />
            
            <arg name="x" value="+10.0" />
            <arg name="y" value="+10.0" />
        </include>
        <node name="$(arg drone_name)" pkg="hectorquad2" type="quadrotor_controller.py" output="screen" args="$(arg drone_name) drone1 drone2" />
    </group>

</launch>
