<launch>
    <group ns="drone1">
        <arg name="drone_name" value="drone1" />
        <include file="$(find hector_quadrotor_gazebo)/launch/spawn_quadrotor.launch">
            <arg name="name" value="$(arg drone_name)" />
            <arg name="tf_prefix" value="$(arg drone_name)" />
            <arg name="x" value="0.0" />
            <arg name="y" value="0.0" />
        </include>
        <node name="focal_driver" pkg="hectorquad2" type="quadrotor_driver.py" output="screen" args="$(arg drone_name)" />
    </group>

    <group ns="drone2">
        <arg name="drone_name" value="drone2" />
        <include file="$(find hector_quadrotor_gazebo)/launch/spawn_quadrotor.launch">
            <arg name="name" value="$(arg drone_name)" />
            <arg name="tf_prefix" value="$(arg drone_name)" />
            <arg name="x" value="+10.0" />
            <arg name="y" value="-10.0" />
        </include>
        <node name="driver" pkg="hectorquad2" type="quadrotor_driver.py" output="screen" args="$(arg drone_name) drone1 drone3 drone4 drone5" />
    </group>

    <group ns="drone3">
        <arg name="drone_name" value="drone3" />
